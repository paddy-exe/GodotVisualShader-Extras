			vec2 uv_tiled = base_uv;// - vec2(0.5 * n_in5p0);
			
			uv_tiled = vec2(uv_tiled.x - ((.5/(1.732 / 2.))*uv_tiled.y), (1./(1.732 / 2.))*uv_tiled.y) / n_in5p2;
			
			vec4 use_col;
			
